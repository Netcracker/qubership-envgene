# Super-linter v7.4.0 Configuration
# Optimized for Qubership EnvGene - disable noisy linters, keep critical ones enabled by default

#############################################
# SECURITY CONFIGURATION
#############################################

# Gitleaks configuration for secrets scanning
GITLEAKS_CONFIG_FILE=.gitleaks.toml

#############################################
# SHELL CONFIGURATION
#############################################

# ShellCheck - only show errors, ignore warnings/info/style
SHELLCHECK_SEVERITY=error

#############################################
# DISABLED LINTERS - TOO NOISY OR NOT NEEDED
#############################################

# Python formatters - disable heavy formatters, keep basic syntax
VALIDATE_PYTHON_BLACK=false
VALIDATE_PYTHON_FLAKE8=false
VALIDATE_PYTHON_ISORT=false
VALIDATE_PYTHON_MYPY=false
VALIDATE_PYTHON_PYINK=false
VALIDATE_PYTHON_PYLINT=false
VALIDATE_PYTHON_RUFF=false

# Java linting - too many files, creates noise
VALIDATE_JAVA=false
VALIDATE_GOOGLE_JAVA_FORMAT=false

# Style and formatting linters - create too much noise
VALIDATE_EDITORCONFIG=false
VALIDATE_SHELL_SHFMT=false
VALIDATE_MARKDOWN=false
VALIDATE_NATURAL_LANGUAGE=false
VALIDATE_ENV=false

# GitHub Actions workflows - create shellcheck noise
VALIDATE_GITHUB_ACTIONS=false

# JavaScript/Web technologies - not used in this project
VALIDATE_JAVASCRIPT_PRETTIER=false
VALIDATE_JAVASCRIPT_STANDARD=false
VALIDATE_JSON_PRETTIER=false
VALIDATE_MARKDOWN_PRETTIER=false
VALIDATE_YAML_PRETTIER=false

# Other linters that create noise
VALIDATE_JSCPD=false
VALIDATE_KUBERNETES_KUBECONFORM=false

# Executable permissions checker - can be noisy
VALIDATE_BASH_EXEC=false

#############################################
# GLOBAL CONFIGURATION
#############################################

# Exclude test data, docs (examples), and test files from all linting
FILTER_REGEX_EXCLUDE=(test_data/.*|docs/.*|.*test.*\.py)

# Gitleaks logging
GITLEAKS_LOG_LEVEL=warn

# Default branch for comparison
DEFAULT_BRANCH=main

# Don't fail fast - collect all errors
DISABLE_ERRORS=false

#############################################
# ENABLED BY DEFAULT (no need to specify VALIDATE=true):
# - VALIDATE_BASH=true (ShellCheck for shell scripts)
# - VALIDATE_YAML=true (YAML syntax validation)  
# - VALIDATE_JSON=true (JSON syntax validation)
# - VALIDATE_DOCKERFILE_HADOLINT=true (Docker best practices)
# - VALIDATE_PYTHON=true (Basic Python syntax)
# - VALIDATE_GITLEAKS=true (Security secrets scanning)
#############################################